<style>
  {{ settings.font_heading | font_face }}
  {{ settings.font_body | font_face }}

  {%- assign font_body_bold = settings.font_body | font_modify: 'weight', 'bolder' -%}
  {%- assign font_body_bold_italic = font_body_bold | font_modify: 'style', 'italic' -%}

  {{ font_body_bold | font_face }}
  {{ font_body_bold_italic | font_face }}

  :root {
    --color-text-headings-links: {{ settings.color_text_headings_links }};
    --color-text-body: {{ settings.color_text_body }};
    --color-text-sale-price: {{ settings.color_text_sale_price }};
    --color-buttons-primary: {{ settings.color_buttons_primary }};
    --color-labels-primary: {{ settings.color_labels_primary }};
    --color-labels-secondary: {{ settings.color_labels_secondary }};
    --color-form-text: {{ settings.color_form_text }};
    --color-form-borders: {{ settings.color_form_borders }};
    --color-form-bg: {{ settings.color_form_bg }};
    --color-image-overlay-text: {{ settings.color_image_overlay_text }};
    --color-image-overlay-bg: {{ settins.color_image_overlay_bg }};
    --opacity-image-overlay: {{ settings.opacity_image_overlay }};
    --color-page-borders: {{ settings.color_page_borders }};
    --color-page-bg: {{ settings.color_page_bg }};

    --font-headings-buttons: {{ settings.font_headings_buttons.family }};
    --font-size-headings: {{ settings.font_size_headings }};
    --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
    --font-body-style: {{ settings.font_body.style }};
    --font-body-weight: {{ settings.font_body.weight }};
    --font-size-body: {{ settings.font_size_body }};
    --font-weight-products-bold: {{ settings.font_weight_products_bold }}
    --font-body-bold-weight: 'bold';
  }
</style>
